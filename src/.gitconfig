[user]
  name = Viktor Kuroljov
  email = viktor@ku.family
[core]
  whitespace = trailing-space,space-before-tab
  excludesfile = ~/global.gitignore
[help]
  autocorrect = 25
[alias]
  aa = add --all
  s = status
  ch = checkout
  cm = commit
  b = branch
  sm = submodule
  lg = log --oneline --all --decorate --graph
  pp = push
  diffc = diff --cached
  mr = push --set-upstream origin HEAD
[push]
  default = simple
[rerere]
  enabled = true
[init]
  defaultBranch = main
